<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Comparison</title>
    <style>
            body, th, td, select, option {
        color: orange;
    }
        .content-container {
            display: flex;
            justify-content: center; /* Horizontally center */
        }

        .inner-table {
            border-collapse: collapse;
        }

            .inner-table th,
            .inner-table td {
                padding: 10px; /* Increased padding for more space */
            }
        /* Styles for radio button list */
        .category-list label {
            display: inline-block;
            margin-right: 10px;
            padding: 8px 12px;
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            border-radius: 4px;
            cursor: pointer;
        }

        .category-list input[type="radio"] {
            display: none;
        }

            .category-list input[type="radio"]:checked + label {
                background-color: #0029A1;
                color: white;
            }

        /* Updated styles for button container */
        .button-container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            margin-bottom: 20px;
        }

            /* Updated styles for category buttons */
            .button-container button {
                margin-right: 10px;
                border: 4px solid #0029A1; /* Deep blue border */
                border-radius: 10px; /* Rounded corners */
                background-color: transparent; /* Transparent background */
                color: #0029A1; /* Text color */
                padding: 12px 20px; /* Increased padding for larger size */
                cursor: pointer; /* Cursor style */
                transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition */
                font-family: 'Arial', sans-serif; /* Robust and modern font */
                font-size: 18px; /* Larger font size */
            }

                /* Hover effect for category buttons */
                .button-container button:hover {
                    background-color: #0029A1; /* Dark blue background on hover */
                    color: white; /* White text on hover */
                }

                /* Active state for category buttons */
                .button-container button:active {
                    transform: translateY(1px); /* Push button down slightly when clicked */
                }
        .row-border {
            border-bottom: 2px solid #0029A1; /* Add border to the bottom of each row */
        }
    </style>
</head>
<body>

    <h2>Termék összehasonlítás</h2>

    <div id="Items-@Dnn.ModuleContext.ModuleId">

        <div class="button-container">
            <div class="button-container">
                <button class="category-button" data-category="C001">Hűtőszekrények</button>
                <button class="category-button" data-category="C002">TV</button>
                <button class="category-button" data-category="C003">Fülhallgató</button>
                <button class="category-button" data-category="C004">Sütő</button>
            </div>

        </div>

        <table class="content-container" style="border-collapse: collapse; border: 5px;">
            <tr>
                <td>
                    <select></select>
                </td>
                <td style="padding: 5px;">
                    <div class="content-container">
                        <div style="border: 5px solid #0029A1; border-radius: 10px;">
                            <table class="inner-table">
                                <tr class="row-border">
                                    <td>0</td>
                                    <th>Ár(Ft)</th>
                                    <td>0</td>
                                </tr>
                                <tr class="row-border">
                                    <td>0</td>
                                    <th>Súly</th>
                                    <td>0</td>
                                </tr>
                                <tr class="row-border">
                                    <td>0</td>
                                    <th>Magasság</th>
                                    <td>0</td>
                                </tr>
                                <tr class="row-border">
                                    <td>0</td>
                                    <th>Szélesség</th>
                                    <td>0</td>
                                </tr>
                                <tr class="row-border">
                                    <td>0</td>
                                    <th>Hosszúság</th>
                                    <td>0</td>
                                </tr>
                                <tr class="row-border">
                                    <td>0</td>
                                    <th>Értékelés</th>
                                    <td>0</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </td>
                <td>
                    <select></select>
                </td>
            </tr>
        </table>
    </div>

    <script>
        // Define your product data with attributes including category ID and separate dimensions
        var products = {
            'Samsung Smart Hűtőszekrény': { categoryId: 'C001', price: 360000, weight: '70kg', length: '60 cm', width: '70 cm', height: '180 cm', rating: 4 },
            'Huawei LP500 Hűtőszekrény': { categoryId: 'C001', price: 300000, weight: '65kg', length: '65 cm', width: '75 cm', height: '175 cm', rating: 3 },
            'LG Hűtőszekrény': { categoryId: 'C001', price: 330000, weight: '72kg', length: '58 cm', width: '72 cm', height: '185 cm', rating: 5 },
            'Samsung Hűtőszekrény': { categoryId: 'C001', price: 390000, weight: '75kg', length: '62 cm', width: '78 cm', height: '180 cm', rating: 2 },
            'Sony Hűtőszekrény': { categoryId: 'C001', price: 375000, weight: '68kg', length: '61 cm', width: '76 cm', height: '178 cm', rating: 4 },
            'Samsung TV': { categoryId: 'C002', price: 240000, weight: '15kg', length: '100 cm', width: '10 cm', height: '70 cm', rating: 4 },
            'Sony TV': { categoryId: 'C002', price: 255000, weight: '13kg', length: '95 cm', width: '9 cm', height: '65 cm', rating: 3 },
            'LG TV': { categoryId: 'C002', price: 270000, weight: '14kg', length: '110 cm', width: '11 cm', height: '75 cm', rating: 5 },
            'Samsung Smart TV': { categoryId: 'C002', price: 300000, weight: '16kg', length: '105 cm', width: '12 cm', height: '80 cm', rating: 2 },
            'Philipps TV': { categoryId: 'C002', price: 285000, weight: '12kg', length: '98 cm', width: '11 cm', height: '72 cm', rating: 4 },
            'Samsung Fülhallgató': { categoryId: 'C003', price: 45000, weight: '0.3kg', length: '5 cm', width: '5 cm', height: '2 cm', rating: 3 },
            'Sony Fülhallgató': { categoryId: 'C003', price: 60000, weight: '0.4kg', length: '6 cm', width: '6 cm', height: '3 cm', rating: 4 },
            'Beats Fülhallgató': { categoryId: 'C003', price: 54000, weight: '0.35kg', length: '5.5 cm', width: '5.5 cm', height: '2.5 cm', rating: 5 },
            'Bang and Olufsen Fülhallgató': { categoryId: 'C003', price: 75000, weight: '0.45kg', length: '6.5 cm', width: '6.5 cm', height: '3.5 cm', rating: 4 },
